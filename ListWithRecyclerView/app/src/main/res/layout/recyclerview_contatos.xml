<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    android:padding="@dimen/dms_default">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/tamanhoImg"
            android:layout_height="@dimen/tamanhoImg"
            android:id="@+id/imgContato"
            tools:src="@drawable/girl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Maria"
            android:textSize="@dimen/dms_24"
            android:textStyle="bold"
            android:id="@+id/txtNome"
            android:padding="@dimen/dms_default"
            android:layout_toRightOf="@id/imgContato"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
