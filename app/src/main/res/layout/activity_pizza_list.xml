<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/icon_dimension"
        android:layout_height="@dimen/icon_dimension"
        android:id="@+id/imgPizza"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/default_padding"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saborPizza"
        android:layout_toRightOf="@+id/imgPizza"
        android:layout_alignTop="@+id/imgPizza"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientesPizza"
        android:layout_toRightOf="@+id/imgPizza"
        android:layout_alignBottom="@id/imgPizza"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precoPizza"
        android:layout_toRightOf="@+id/imgPizza"
        android:layout_alignBottom="@id/imgPizza"/>
</RelativeLayout>
